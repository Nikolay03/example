{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/components/*": ["./components/*"],
      "~/constants/*": ["./constants/*"],
      "~/hooks/*": ["./hooks/*"],
      "~/icons/*": ["./icons/*"],
      "~/lib/*": ["./lib/*"],
      "~/locales/*": ["./locales/*"],
      "~/reducers/*": ["./reducers/*"],
      "~/theme/*": ["./theme/*"],
      "~/types/*": ["./types/*"],
      "~/utils/*": ["./utils/*"],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".next"
  ]
}
